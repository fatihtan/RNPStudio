@using Sky.CMS.Services
@using Sky.Log.DTO
@model UI.Web.Models.Statistics.LogListModel
@{
    Layout = null;
    ViewBag.Title = "Gönderi Görüntüleme";
    List<LogPostView> LogList = ((List<BaseDTO>)Model.LogList).Cast<LogPostView>().ToList();
    string UserFullName = Model.UserID.HasValue ? string.Format("{0} {1}", Model.User.FirstName, Model.User.LastName) : null;
}

<table class="table table-striped table-bordered table-hover table-checkable order-column padding-top-zero" id="item_list">
    <thead>
        <tr>
            <th class="hidden"></th>
            <th class="col-md-2">Kullanıcı</th>
            <th class="col-md-2 text-center">Gönderi ID</th>
            <th class="col-md-1 text-center">IP Adres</th>
            <th class="col-md-2 text-center">Tarih</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in LogList)
        {
            <tr class="odd gradeX object-item" id="object_@item.ID">
                <td class="hidden">&nbsp;</td>
                <td>
                    @(Model.UserID.HasValue ? UserFullName : item.UserFullName)
                </td>
                <td class="text-center">@item.PostID</td>
                <td class="text-center">@item.IPAddress</td>
                <td class="text-center">@item.CreatedAt.ToString("yyyy.MM.dd HH:mm:ss")</td>
            </tr>
        }

    </tbody>
</table>
<input type="hidden" id="orderNum" value="4"/>