@using Sky.Common.DTO
@model UI.Web.Models.Customer.CustomerModel

@{
    string CDNBaseURL = System.Configuration.ConfigurationManager.AppSettings["CDNBaseURL"];
}

<div class="pull-right margin-bottom-10">
    <a class="btn green text-proper" href="/Customer/SocialMediaAccountSave/@Model.Customer.ID"><i class="fa fa-plus"></i>&nbsp;Yeni Ekle</a>
</div>

<table class="table table-striped table-bordered table-hover table-checkable order-column" id="table_social_media_account_list">
    <thead>
        <tr>
            <th class="hidden">&nbsp;</th>
            <th>No</th>
            <th>Hesap Adı</th>
            <th>Platform</th>
            <th class="col-md-2">İlk Kayıt Takipçi Sayısı</th>
            <th>İlk Kayıt Ekran Görüntüsü</th>
            <th class="text-center">Tarih</th>
            <th>&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.SocialMediaAccountList)
        {
            <tr class="odd gradeX">
                <td class="hidden">&nbsp;</td>
                <td>@item.ID</td>
                <td>@item.AccountName</td>
                <td>@item.TKSocialMediaPlatform.ToString()</td>
                <td>@item.FollowerCountInReg</td>
                <td class="col-md-2">
                    <a href="@(string.Format("{0}{1}", CDNBaseURL, item.ScreenShotInReg))" class="bimp-link" title="@(string.Format("{0} - {1} Takipçi", item.AccountName, item.FollowerCountInReg))">
                        <img class="img-responsive" src="@(string.Format("{0}{1}", CDNBaseURL, item.ScreenShotInReg))" />
                    </a>
                </td>
                <td class="text-center">@item.CreatedAt.ToString("yyyy.MM.dd HH:mm:ss")</td>
                <td class="text-center">
                    <a href="/Customer/SocialMediaAccountUpdate/@item.ID" 
                        class="btn btn-sm text-proper">Git</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div id="blueimp-gallery" class="blueimp-gallery blueimp-gallery-controls" data-filter=":even">
    <div class="slides">
        
    </div>

    <h3 class="title"></h3>
    <a class="prev">‹ </a>
    <a class="next">› </a>
    <a class="close white"></a>
    <a class="play-pause"></a>
    <ol class="indicator"></ol>
</div>